<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DD0000"
    android:orientation="vertical"
    tools:context=".Activity.Qrcode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:src="@drawable/carrofrente" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="PEÇAS COM DEFEITO"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#f0f0f0"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbParachoqueDianteiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Parachoque"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SParachoqueDianteiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbCapo"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Capô"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SCapo"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFarolEsquerda"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Farol Esquerdo"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFarolEsquerda"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFarolDireita"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Farol Direito"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFarolDireita"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbGradeFrontal"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Grade Frontal"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SGradeFrontal"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbCaixaAr"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Caixa de Ar"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SCaixaAr"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFriso"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Friso Frontal"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFriso"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFarolNeblina"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Farol Neblina"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFarolNeblina"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btOrçamentoFrente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:text="Adicionar ao Orçamento"
            app:bootstrapBrand="success"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>
</LinearLayout>